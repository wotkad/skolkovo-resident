.popup2__overlay
	filter blur(20px)
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	opacity 0
	z-index -1
.popup2
	background-color $white
	opacity 0
	z-index -1
	position fixed
	transition opacity .3s
	left calc(50% - 381px)
	border-radius 15px
	overflow hidden
	display flex
	flex-direction column
	top 0
	margin 0 auto
	box-shadow 0px 4px 30px rgba(0, 0, 0, 0.07)
	overflow-y auto
	max-width 762px
	top calc(50% - 144px)
	&__header
		background-color $green
		min-height 90px
		display flex
		justify-content space-between
		border-radius 15px 15px 0 0
		box-shadow 0px 4px 30px rgba(0, 0, 0, 0.07);
	&__header-title
		flex-basis 90%
		display flex
		justify-content flex-start
		color $white
		font-family $SemiBold
		font-size 1.5rem
		line-height 34px
		align-items center
		padding-left 30px
	&__header-close
		flex-basis 10%
		display flex
		justify-content center
		align-items center
	&__header-close svg
		width 16px
		height 16px
		transition .3s
		cursor pointer
		fill $white
		&:hover
			fill $black
	&__footer
		display grid
		grid-template-columns repeat(6, 1fr)
		width 100%
		padding 20px 40px
		gap 10px
		&-input
			width 100%
			border-radius 5px
			border 1px solid #dfdfdf
			background-color $white
			line-height 19px
			font-size 0.875rem
			padding 15px 25px
			font-family $Regular
			margin 0 5px 10px 0
		&-input:nth-child(1)
			grid-column 1 / 3
		&-input:nth-child(2)
			grid-column 3 / 5
		&-input:nth-child(3)
			grid-column 5 / 7
		&-button
			cursor pointer
			border-radius 5px
			display flex
			justify-content center
			color $white
			font-family $SemiBold
			font-size 1.125rem
			line-height 28px
			align-items center
			border none
			padding 20px 9px
			background $greengradient
			transition .3s
			grid-column 4 / 7
			flex-wrap wrap
			flex-direction column
			&:hover
				opacity .8
		&-button span
			color $text
			font-family $LightItalic
			line-height 19px
			font-size 0.75rem
		&-textarea
			width 100%
			border-radius 5px
			border 1px solid #dfdfdf
			background-color $white
			line-height 19px
			font-size 0.875rem
			padding 15px 25px
			grid-column 1 / 4
			resize none
			font-family $Regular
@media (max-width:47.9375rem)
	.popup2__header-close
		justify-content flex-start
@media (max-width:47.625rem)
	.popup2
		width 350px
		left calc(50% - 175px)
		top calc(50% - 255px)
	.popup2__footer
		grid-template-columns repeat(1, 1fr)
		&-input:nth-child(1)
			grid-column 1 / 2
		&-input:nth-child(2)
			grid-column 1 / 2
		&-input:nth-child(3)
			grid-column 1 / 2
		&-textarea
			grid-column 1 / 2
		&-button
			grid-column 1 / 2
@media (max-width:37.5rem)
	.popup2__item
		flex-basis 100%
	.popup2__itemfull
		flex-basis 50%
	.popup2__footer
		justify-content center
		height auto
		flex-wrap wrap
		padding 20px 20px 0 20px;
	.popup2__footer-button
		margin 20px 0
