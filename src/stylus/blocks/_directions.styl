.directions
	padding 40px 0
	&__title
		font-size 2.625rem
		line-height 59px
		color $text
		text-align center
		font-family $SemiBold
		margin-bottom 65px
		position relative
		&:after
			content ''
			width 10%
			background-color $green
			height 1px
			display inline-block
			position absolute
			bottom -11px
			left 45%
	&__items
		display grid
		grid-template-columns repeat(6, 1fr)
	.directions__item
		background url(/images/directions-bg.png) 50% 50%
		background-repeat no-repeat
		height 400px
		display flex
		align-items center
		flex-wrap wrap
		justify-content center
		position relative
		transition .3s
		&-mask
			height 400px
			position absolute
			width 100%
			z-index 1
		&-title
			color $text
			font-size 1.125rem
			line-height 25px
			font-family $SemiBold
			margin-bottom 10px
			text-align center
			position relative
			&:after
				content ''
				width 25%
				background-color $green
				height 1px
				display inline-block
				position absolute
				bottom -11px
				left 37.5%
		&-text
			max-width 80%
			margin 15px auto 0 auto
			font-family $Regular
			font-size 0.875rem
			color $text
			line-height 19px
			text-align center
			& span
				margin-left 5px
			& span:nth-child(1)
				font-family $SemiBold
		&-desc
			display flex
			flex-direction column
			padding 0 40px 34px 40px
	&__item:nth-child(1)
		grid-column 1 / 3
		z-index 1
		.directions__item-mask
			background url(/images/directionmask1.png) 50% -2% no-repeat
	&__item:nth-child(2)
		grid-column 3 / 5
		z-index 1
		.directions__item-mask
			background url(/images/directionmask2.png) 50% -2% no-repeat
	&__item:nth-child(3)
		grid-column 5 / 7
		z-index 1
		.directions__item-mask
			background url(/images/directionmask3.png) 50% -2% no-repeat
	&__item:nth-child(4)
		grid-column 1 / 4
		background-position 133.5% 50%
		margin-top -165px
		.directions__item-desc
			max-width 60%
			margin-right -33%
		.directions__item-mask
			background url(/images/directionmask4.png) 104.5% -2px no-repeat
	&__item:nth-child(5)
		grid-column 4 / 7
		background-position -33.5% 50%
		margin-top -165px
		.directions__item-mask
			background url(/images/directionmask5.png) -4.5% -2px no-repeat
		.directions__item-desc
			max-width 60%
			margin-left -33%
	&__slider
		display none
@media (max-width:71.25rem)
	.directions
		padding 50px 30px
		&__items
			display grid
			grid-template-columns repeat(2, 1fr)
		&__item:nth-child(1)
			grid-column 1 / 2
		&__item:nth-child(2)
			grid-column 2 / 3
		&__item:nth-child(3)
			order 4
			margin-top -165px
			grid-column 1 / 2
		&__item:nth-child(4)
			margin-top -165px
			order 5
			grid-column 2 / 3
			background-position 50% 50%
			.directions__item-mask
				background-position 50% 50%
			.directions__item-desc
				max-width 100%
				margin-right 0
		&__item:nth-child(5)
			order 3
			grid-column 1 / 3
			background-position 50% 50%
			.directions__item-mask
				background-position 50% 50%
			.directions__item-desc
				max-width 100%
				margin-left 0
		.directions__item-desc
			padding 0 60px 34px 60px
@media (max-width:55rem)
	.directions__items
		display none
	.directions__slider
		display block
