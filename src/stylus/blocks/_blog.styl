.blog-bg
	background url(/images/home-bg.jpg) 50% 50%
	background-size cover
	background-repeat no-repeat
	height 100%
	filter blur(20px)
	opacity .25
	position absolute
	top 0
	right 0
	left 0
	bottom 0
	z-index -1
.slider-mask
	width 50%
	background-color rgba(255,255,255,.7)
	position absolute
	top 0
	right 0
	left 50%
	bottom 0
	z-index 2
.blog
	position relative
	display flex
	padding 40px 10%
	&__slider
		max-width 66.66667%
		display flex
		position relative
	&__post
		transition .3s
		border-radius 0 0 15px 15px
		&-image
			height 230px
		&-desc
			flex-basis 50%
			background-color $white
			padding 30px 40px 46px 40px
			display flex
			flex-direction column
			justify-content space-between
			min-height 300px
			align-items flex-start
			&-title
				font-family $SemiBold
				line-height 25px
				font-size 1.125rem
				margin-bottom 5px
			&-date
				font-size 0.875rem
				line-height 18px
				font-family $Light
				margin-bottom 15px
				color $gray
			&-text
				font-size 0.875rem
				line-height 18px
				font-family $Regular
				margin-bottom 25px
				max-width 100%
			&-link
				color $black
				font-family $SemiBold
				font-size 0.875rem
				line-height 20px
				position relative
				overflow hidden
				margin-left 5px
				display inline-block
				&:after
					content ''
					width 100%
					height 5px
					display inline-block
					position absolute
					background-color $green
					z-index 1
					bottom 2px
					left 0
					transform translateX(0)
					transition .3s
				&:hover&:after
					transform translateX(100%)
			&-link p
				z-index 3
				position relative
				display inline-block
	&__info
		flex-basis 33.33334%
		margin 0 0 0 53px
		order 3
		&-title
			font-size 2.625rem
			font-family $SemiBold
			color $text
			line-height 59px
			position relative
			&:after
				content ''
				width 40%
				background-color $green
				height 1px
				display inline-block
				position absolute
				z-index -1
				bottom -20.5px
				left 0
		&-text
			font-size 1.125rem
			line-height 24px
			color $text
			margin 41px 0 25px
			font-family $Light
			line-height 24px
			width 100%
.swiper-button-prev, .swiper-button-next
	width 70px
	height 70px
	top calc(50% - 35px)
	background-size auto
	z-index 3
.swiper-button-prev
	background-image url(/images/arrow-left.png)
	right 25%
	left auto
.swiper-button-next
	background-image url(/images/arrow-right.png)
	right 15%
.swiper-pagination-bullets
	display none
@media (max-width:75rem)
	.blog
		flex-wrap wrap
	.blog__slider
		max-width 100%
		order 2
	.blog__info
		flex-basis 100%
		order 1
		margin 0
@media (max-width:61.9375rem)
	.blog__post-desc
		min-height 320px
	.swiper-pagination-bullets
		display inline-block
	.blog
		padding 0 30px 50px 30px
	.slider-mask
		display none
	.swiper-button-prev, .swiper-button-next
		display none
	.swiper-container
		padding-bottom 50px
	.blog__info
		margin 0
	.blog__slider
		margin 0
	.swiper-container-horizontal > .swiper-pagination-bullets
		bottom 0
	.swiper-pagination-bullet
		width 20px
		height 20px
		border 2px solid #E2E2E2
		background #fff
		opacity 1
	.swiper-pagination-bullet-active
		background #BFDF14
